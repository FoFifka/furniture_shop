<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Furniture_shop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_A700</item>
        <item name="colorSecondaryVariant">@color/green_700_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Splash_Screen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splashscreen</item>
    </style>



    <style name="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/green_700_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_A700</item>
        <item name="colorSecondaryVariant">@color/green_700_2</item>
        <item name="colorOnSecondary">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#9CCC65</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#66BB6A</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#66BB6A</item> <!-- checkbox text color -->
    </style>
</resources>